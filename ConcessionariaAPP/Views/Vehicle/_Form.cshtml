@using ConcessionariaAPP.Domain.Enum
@using ConcessionariaAPP.Models.VehicleViewModel
@model VehicleViewModel

@{
    ViewData["Title"] = "Vehicle Form";
    var action = ViewData["Action"] as string ?? "Create";
}


<form id="modalForm" asp-action="@action" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="VehicleId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ManufacturingYear" class="form-label"></label>
        <input asp-for="ManufacturingYear" class="form-control" />
        <span asp-validation-for="ManufacturingYear" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ManufacturerIds" class="form-label"></label>
        <select asp-for="ManufacturerIds" asp-items="@(new SelectList(Model.ManufacturerNames, "Value", "Text"))" class="form-select" multiple>
            <option value="">Selecione os fabricantes</option>
        </select>
        <span asp-validation-for="ManufacturerIds" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="VehicleType" class="form-label"></label>
        <select asp-for="VehicleType" class="form-select">
            <option value="">Selecione o tipo de ve√≠culo</option>
            @foreach (var type in Enum.GetValues(typeof(VehiclesTypes)).Cast<VehiclesTypes>())
            {
                <option value="@type">@type</option>
            }
        </select>
        <span asp-validation-for="VehicleType" class="text-danger"></span>
    </div>

</form>