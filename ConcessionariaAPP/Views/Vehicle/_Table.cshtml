@using ConcessionariaAPP.Models.VehicleViewModel
@model VehicleTableViewModel

<div itemid="data-table">
    @if (Model.Rows.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <p class="lead">Nenhum Veículo cadastrado.</p>
        </div>
    }
    else
    {

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    @foreach (var column in Model.Columns)
                    {
                        <th>@column</th>
                    }
                    <th>Ações</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var row in Model.Rows)
                {
                    <tr>
                        @foreach (var key in Model.Keys)
                        {
                            <td>@row.GetType().GetProperty(key)?.GetValue(row)</td>
                        }
                        <td>
                            <a asp-action="Edit" asp-route-id="@row.GetType().GetProperty("VehicleId")?.GetValue(row)" class="btn btn-warning btn-sm" onclick="openEntityModal(this.href, 'Edição de Veículo'); return false;">Editar</a>
                            <a asp-action="Delete" asp-route-id="@row.GetType().GetProperty("VehicleId")?.GetValue(row)" class="btn btn-danger btn-sm" onclick="openDeleteModal(this.href, 'Exclusão de Veículo'); return false;">Excluir</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
</div>