@using ConcessionariaAPP.Models.UserViewModel;
@using ConcessionariaAPP.Domain.Enum
@model LoggedUserViewModel

@if (Model != null)
{

    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
    </li>

    @if (Model.AccessLevel == AccessLevel.Admin)
    {
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Manufacturer" asp-action="Index">Fabricantes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="CarDealership" asp-action="Index">Concessionárias</a>
        </li>
    }

    @if (Model.AccessLevel == AccessLevel.Admin || Model.AccessLevel == AccessLevel.Manager)
    {
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Vehicle" asp-action="Index">Veículos</a>
        </li>
        @* <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Report" asp-action="Index">Relatórios</a>
        </li> *@
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Client" asp-action="Index">Clientes</a>
        </li>
    }
    @if (Model.AccessLevel == AccessLevel.Seller || Model.AccessLevel == AccessLevel.Admin)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Sale" asp-action="Index">Vendas</a>
        </li>
    }
}
